<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <TextView
        android:id="@+id/choose_text"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="400dp"
        android:background="#4E7BEF"
        android:text="userinfo"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textScaleX="1"
        android:textSize="48sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exer_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="300dp"
        android:backgroundTint="#C14E4E"
        android:text="내 운동기록"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/exer_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:background="#0C0B0B"
        android:backgroundTint="@color/purple_500"
        android:backgroundTintMode="screen"
        android:text="운동시작"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#D3C54B"
        android:textColorHint="#D8CD68"
        android:textColorLink="#EFE26C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exer_one"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#D6C950" />

</androidx.constraintlayout.widget.ConstraintLayout>